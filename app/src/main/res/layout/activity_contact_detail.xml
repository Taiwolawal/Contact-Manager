<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetail">


    <TextView
        android:id="@+id/first_name"
        android:text="@string/first_name"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_first_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_first_name"
        android:inputType="text"
        style="@style/contact_details_et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name" />

    <TextView
        android:id="@+id/last_name"
        android:text="@string/last_name"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_last_name"
        app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

    <EditText
        android:id="@+id/et_last_name"
        android:inputType="text"
        style="@style/contact_details_et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name" />

    <TextView
        android:id="@+id/phone_number"
        android:text="@string/phone_number"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/et_last_name" />

    <EditText
        android:id="@+id/et_phone_number"
        android:inputType="phone"
        style="@style/contact_details_et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />

    <TextView
        android:id="@+id/birthday"
        android:text="@string/birthday"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_birthday"
        app:layout_constraintTop_toBottomOf="@+id/et_phone_number" />

    <EditText
        android:id="@+id/et_birthday"
        style="@style/contact_details_et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthday"
        android:drawablePadding="10dp"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:drawableEnd="@drawable/ic_calendar"
        android:autofillHints="MM/DD/YYY"
        android:inputType="text|number" />

    <TextView
        android:id="@+id/address"
        android:text="@string/address"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_address"
        app:layout_constraintTop_toBottomOf="@+id/et_birthday" />

    <EditText
        android:id="@+id/et_address"
        android:inputType="textPersonName"
        style="@style/contact_details_et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/zip_code"
        android:text="@string/zip_code"
        style="@style/tv_style"
        app:layout_constraintStart_toStartOf="@+id/et_zip_code"
        app:layout_constraintTop_toBottomOf="@+id/et_address" />

    <EditText
        android:id="@+id/et_zip_code"
        style="@style/contact_details_et_style"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zip_code" />

<!--    <ImageView-->
<!--        android:id="@+id/image_calendar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/ic_calendar"-->
